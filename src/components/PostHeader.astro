---
const { category, title, author, date, image } = Astro.props;

// utils imports
import { slugify, formatDate } from '../js/utils';
import { Image } from 'astro:assets';
---

<header>
	<div class='container'>
		<small>
			<a href={`/category/${slugify(category)}/`} class='badge'>{category}</a>
		</small>
		<h1 class='h2'>{title}</h1>
		<p>by <a href={`/author/${author}`}>{slugify(author)}</a> â€¢ {formatDate(date)}</p>
		<Image src={image.src} alt={image.alt} width='1200' height='600' format='avif' quality={80} class='hero-image' />
	</div>
</header>
