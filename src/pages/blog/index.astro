---
// component imports
import MainLayout from '../../layouts/MainLayout.astro';
import PostCard from '../../components/PostCard.astro';

// util imports
import { formatBlogPosts } from '../../js/utils';

const allPosts = await Astro.glob('./*.md');
const formatedPosts = formatBlogPosts(allPosts);
---

<MainLayout title='My Blog' description='My musings about the Astro framework'>
	<section class='container' aria-label='New Blog Posts'>
		<h1 class='h1'>New Blog Posts</h1>
		<div class='post-container'>
			{formatedPosts.map((post: any) => <PostCard frontmatter={post.frontmatter} url={post.url} tagType='h2' />)}
		</div>
	</section>
</MainLayout>
