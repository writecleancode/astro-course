---
// component imports
import MainLayout from '../../layouts/MainLayout.astro';
import PostCard from '../../components/PostCard.astro';

// util imports
import { slugify, formatBlogPosts } from '../../js/utils';

export const getStaticPaths = async () => {
	const allPosts = await Astro.glob('../blog/*.md');
	const formattedPosts = formatBlogPosts(allPosts);
	const allAuthors = [...new Set(formattedPosts.map((post: any) => post.frontmatter.author))];
	return allAuthors.map(author => {
		const authorPosts = formattedPosts.filter((post: any) => post.frontmatter.author === author);
		return {
			params: { author: slugify(author) },
			props: {
				authorName: author,
				posts: authorPosts,
			},
		};
	});
};

const { author } = Astro.params;
const { posts, authorName } = Astro.props;
---

<MainLayout title={authorName} description='My musings about the Astro framework'>
	<section class='container' aria-label={`Posts by ${authorName}`}>
		<h1 class='h1'>Posts by <span>{authorName}</span></h1>
		<div class='post-container'>
			{posts.map((post: any) => <PostCard frontmatter={post.frontmatter} url={post.url} tagType='h2' />)}
		</div>
	</section>
</MainLayout>
